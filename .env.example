# GitHub configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI configuration (only needed if using Azure)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your_deployment_name
AZURE_OPENAI_API_VERSION=2023-05-15

# Anthropic configuration (only needed if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Custom API configuration (only needed if using custom model)
CUSTOM_API_KEY=your_custom_api_key_here
CUSTOM_API_ENDPOINT=https://your-custom-endpoint.com/api

# For local testing of CI mode
PR_NUMBER=123
GITHUB_REPOSITORY_OWNER=your_github_username
GITHUB_REPOSITORY=your_github_username/your_repo_name
